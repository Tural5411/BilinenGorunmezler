@model bilgorsite.Models.tbl_book
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout1.cshtml";
}

    <div class="content container-fluid">
        <div class="row">
            <div class="col-xl-8 offset-xl-2">

                <!-- Page Header -->
                <div class="page-header">
                    <div class="row">
                        <div class="col">
                            <h3 class="page-title">Kitab Yüklə</h3>
                        </div>
                    </div>
                </div>
                <!-- /Page Header -->

                <div class="card">
                    <div class="card-body">
                        <!-- Form -->
                        @using (Html.BeginForm("Create", "Book", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {

                            <div class="form-group">
                                <label>Kitabın Adı</label>
                                <input class="form-control" name="Name" type="text">
                            </div>
                            <div class="form-group">
                                <label>Kitabın Səhifə Sayı</label>
                                <input class="form-control" name="Page" type="text">
                            </div>
                            <div class="form-group">
                                <label>Kitab haqqında qısa məlumat</label>
                                <textarea name="Context" id="editor">
                            </textarea>
                            </div>
                            <div class="form-group">
                                <label>Kitabın Yazıçısın Seç</label>
                                @*@Html.DropDownList("WriterId", (SelectList)ViewBag.WriterId, new { @class = "form-control" })*@
                                @Html.DropDownList("WriterId", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Kitabın şəkli</label>
                                <input class="form-control" name="image" type="file">
                            </div>
                            <div class="form-group">
                                <label>Kitabın PDFi</label>
                                <input class="form-control" name="pdf" type="file">
                            </div>
                            <div class="mt-4">
                                <button class="btn btn-primary" type="submit">Əlavə Et</button>
                                <a href="@Url.Action("Index", "Book")" class="btn btn-link">Ləğv Et</a>
                            </div>
                        }
                        <!-- Form -->
                    </div>
                </div>
            </div>
        </div>
    </div>