
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout1.cshtml";
}

    <div class="content container-fluid">
        <div class="row">
            <div class="col-xl-8 offset-xl-2">

                <!-- Page Header -->
                <div class="page-header">
                    <div class="row">
                        <div class="col">
                            <h3 class="page-title">Video Əlavə Et</h3>
                        </div>
                    </div>
                </div>
                <!-- /Page Header -->

                <div class="card">
                    <div class="card-body">
                        <!-- Form -->
                        @using (Html.BeginForm("Create", "Video", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {

                            <div class="form-group">
                                <label>Videonun Adı</label>
                                <input class="form-control" name="name" type="text">
                            </div>
                            <div class="form-group">
                                <label>Videonun Linki</label>
                                <input class="form-control" name="videourl" placeholder="Məsələn : https://www.youtube.com/watch?v=zyCRxGpVA4Y" type="text">
                            </div>
                            <div class="form-group">
                                <label>Videonun şəkli</label>
                                <input class="form-control" name="image" type="file">
                            </div>
                            <div class="mt-4">
                                <button class="btn btn-primary" type="submit">Əlavə Et</button>
                                <a href="@Url.Action("Index", "Video")" class="btn btn-link">Ləğv Et</a>
                            </div>
                        }
                        <!-- Form -->
                    </div>
                </div>
            </div>
        </div>
    </div>

