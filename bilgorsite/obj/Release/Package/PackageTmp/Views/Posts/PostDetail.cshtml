@model bilgorsite.ViewModel.PostVM
@{
    ViewBag.Title = "PostDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <script type="text/javascript" src="https://platform-api.sharethis.com/js/sharethis.js#property=60087cdec03e54001829c889&product=sticky-share-buttons" async="async"></script>
        <div class="content-area">
            <div class="page-title">
                <div class="sharethis-inline-share-buttons"></div>
                <div class="main-top" style="background-image: url(assets/images/bg-page-title-01.jpg);">
                    <div class="overlay-top-header"></div>
                    <div class="content container">
                        <h1>
                            Post
                        </h1>
                        <div class="wrap-breadcrumb">
                            <ul class="breadcrumbs">
                                <li>
                                    <a href="/">
                                        Ana Səhifə
                                    </a>
                                </li>
                                <li>
                                    <span class="breadcrum-icon">/</span>
                                    Post
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="site-content sidebar-right layout-1">
                <div class="container">
                    <div class="row">
                        <main class="site-main col-lg-9">
                            <div class="wrap-main-content">

                                <div class="bl-blog-detail">
                                    <div class="head-blog">
                                        <h2 class="title-blog-detail">
                                            @Model.postSingle.Title
                                        </h2>
                                        <div class="info-blog-detail">
                                            <span class="info-item">
                                                <i class="ion ion-android-person"></i>
                                                By <a href="javascript:;">@Model.postSingle.aspnet_Users.UserName</a>
                                            </span>
                                            <span class="info-item">
                                                <i class="ion ion-ios-pricetags-outline"></i>
                                                <a href="javascript:;">@Model.postSingle.tbl_category.Name</a>
                                            </span>
                                            <span class="info-item">
                                                <i class="ion ion-android-chat"></i>
                                                (0) Şərh
                                            </span>
                                        </div>
                                    </div>
                                    <div class="media-blog-detail">
                                        <div class="pic">
                                            <img src="@Model.postSingle.tbl_photo.URL" alt="@Model.postSingle.Title">
                                        </div>
                                        <div class="date">
                                            <span class="number"></span>@Model.postSingle.DateTime.Value.ToShortDateString()
                                        </div>
                                    </div>
                                    <div class="text-blog-detail">
                                        <div style="text-align:justify" class="content-blog">
                                            <p>@Html.Raw(Model.postSingle.Context)</p>


                                            <div class="tags mt-4">
                                                <span class="name-field">Etiket:</span>
                                                <a href="javascript:;" class="tag-item">bilinən görünməzlər</a>
                                                <a href="javascript:;" class="tag-item">bilgör</a>
                                            </div>
                                            <div class="sharethis-inline-reaction-buttons"></div>


                                            <div class="author-blog">
                                                <div class="pic-author">
                                                    <div class="ava-author">
                                                        <a href="javascript:;"><img width="70" height="70" src="~/PublicFront/bilgorico.png" alt="IMG"></a>
                                                    </div>
                                                </div>
                                                <div class="text-author">
                                                    <div class="name-author mt-4">
                                                        Bilinən görünməzlər komandasından :
                                                        <a href="javascript:;">
                                                            @Model.postSingle.aspnet_Users.UserName
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>



                                            <div class="comments-area">
                                                <div class="list-comments">
                                                    <h3 class="comments-title">
                                                        2 comments
                                                    </h3>
                                                    <ul class="comment-list">
                                                        <li class="comment">
                                                            <img class="avatar" src="assets/images/ava-01.jpg" alt="IMG">
                                                            <div class="content-comment">
                                                                <div class="author">
                                                                    <span class="author-name">
                                                                        Edugate
                                                                    </span>
                                                                    <span class="comment-extra-info">
                                                                        November 11, 2016 at 9:10 AM
                                                                    </span>
                                                                    <span class="link-reply-edit">
                                                                        <a href="javascript:;" class="comment-reply-link">
                                                                            Reply
                                                                        </a>
                                                                    </span>
                                                                </div>
                                                                <div class="message">
                                                                    <p>
                                                                        So far, the conversion increase is more due to plain blunt force, but the quality of boss conversions and subsequent leads can be increased
                                                                    </p>
                                                                </div>
                                                            </div>
                                                            <ul class="children">
                                                                <li class="comment">
                                                                    <img class="avatar" width="50" height="50" src="assets/images/ava-01.jpg" alt="IMG">
                                                                    <div class="content-comment">
                                                                        <div class="author">
                                                                            <span class="author-name">
                                                                                Edugate
                                                                            </span>
                                                                            <span class="comment-extra-info">
                                                                                November 11, 2016 at 9:10 AM
                                                                            </span>
                                                                            <span class="link-reply-edit">
                                                                                <a href="javascript:;" class="comment-reply-link">
                                                                                    Reply
                                                                                </a>
                                                                            </span>
                                                                        </div>
                                                                        <div class="message">
                                                                            <p>
                                                                                So far, the conversion increase is more due to plain blunt force, but the quality of boss conversions and subsequent leads can be increased
                                                                            </p>
                                                                        </div>
                                                                    </div>
                                                                </li>
                                                            </ul>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>

                                            <div class="form-comment">
                                                <div id="respond" class="comment-respond">
                                                    <h3 id="reply-title" class="comment-reply-title">
                                                        LEAVE A COMMENT
                                                        <small>
                                                            <a href="javascript:;" style="display:none;">Cancel Reply</a>
                                                        </small>
                                                    </h3>
                                                    <form class="comment-form" novalidate="">
                                                        <p class="comment-notes">
                                                            <span id="email-notes">Your email address will not be published.</span> Required fields are marked <span class="required">*</span>
                                                        </p>
                                                        <div class="comment-meta">
                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <p class="comment-form-author">
                                                                        <input placeholder="Your Name *" id="author" name="author" type="text" value="" size="30" aria-required="true">
                                                                    </p>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <p class="comment-form-email">
                                                                        <input placeholder="Email *" id="email" name="email" type="text" value="" size="30" aria-required="true">
                                                                    </p>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="comment-message">
                                                            <p class="comment-form-comment">
<textarea placeholder="Enter your comment *" id="comment" name="comment" cols="45" rows="8" aria-required="true"></textarea>
                                                            </p>
                                                        </div>
                                                        <p class="form-submit">
                                                            <input name="submit" type="submit" id="submit" class="submit" value="submit comment">
                                                            <input type="hidden" name="comment_post_ID" value="362" id="comment_post_ID">
                                                            <input type="hidden" name="comment_parent" id="comment_parent" value="0">
                                                        </p>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    

                                </div>
                                @{
                                    Html.RenderAction("RelatedCategory", "Posts");
                                }

                            </div>
                        </main>
                    <div class="widget-area col-sm-9 col-md-8 col-lg-3 sticky-sidebar">
                        <aside class="widget widget_search">
                            <form class="search-form" action="@Url.Action("BookPage","Books",new { })">
                                <label>
                                    <span class="screen-reader-text">Search for:</span>
                                    <input type="hidden" name="sortBy" value="@Model.sortBy" />
                                    <input class="search-field" name="searchTerm" type="text" placeholder="Axtardığınız postu yazın ?">
                                </label>
                                <input class="search-submit" type="submit" value="Search">
                            </form>
                        </aside>
                        <aside class="widget widget_product_categories">
                            <h3 class="widget-title">
                                Post Kateqorİyaları
                            </h3>
                            <select onchange="location=this.value" class="form-control">
                                <option>Kateqoriya Seçin</option>
                                @foreach (var x in Model.categories)
                                {

                                    <option class="form-control"
                                            value="@Url.Action("PostPage","Posts",new { id=x.CategoryId,sortBy=Model.sortBy})">
                                        @x.Name
                                    </option>
                                }
                            </select>
                        </aside>
                        @{
                            Html.RenderAction("PopularPost", "Books");
                        }

                        <aside class="widget widget_tag_cloud">
                            <h3 class="widget-title">
                                Etİketlər
                            </h3>
                            <div class="tagcloud">
                                <a href="javascript:;" class="tag-cloud-link">
                                    Bilgör
                                </a>
                                <a href="javascript:;" class="tag-cloud-link">
                                    Bilinən Görünməzlər
                                </a>
                                <a href="javascript:;" class="tag-cloud-link">
                                    Psixalogiya
                                </a>
                                <a href="javascript:;" class="tag-cloud-link">
                                    Mistika
                                </a>
                                <a href="javascript:;" class="tag-cloud-link">
                                    Metafizika
                                </a>
                            </div>
                        </aside>
                        <aside class="widget widget_text">
                            <div class="textwidget">
                                <a href="javascript:;">
                                    <img src="~/PublicFront/assets/images/ads-04.jpg" alt="IMG">
                                </a>
                            </div>
                        </aside>
                    </div>
                    </div>
                </div>
            </div>
        </div>

