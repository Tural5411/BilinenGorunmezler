@model bilgorsite.ViewModel.PostVM
    <div class="related-blog">
        <h3 class="related-title">
            Oxşar Postlar
        </h3>
        <div class="wrap-element">
            <div class="list-posts">
                <div class="slide-posts js-call-slick-col" data-numofshow="3" data-numofscroll="1" data-loopslide="1" data-autoscroll="0" data-speedauto="6000" data-responsive="[3, 1], [3, 1], [2, 1], [2, 1], [1, 1]">
                    <div class="wrap-arrow-slick">
                        <div class="arow-slick prev-slick">
                            <i class="ion ion-chevron-left"></i>
                        </div>
                        <div class="arow-slick next-slick">
                            <i class="ion ion-chevron-right"></i>
                        </div>
                    </div>
                    <div class="slide-slick">
                        @foreach (var x in Model.postList)
                        {
                            <div class="item-slick">
                                <div class="post-item">
                                    <div class="pic">
                                        <img src="@x.tbl_photo.URL" alt="@x.Title">
                                        <div class="overlay"></div>
                                        <div class="meta-info">
                                            <div class="label" style="background: #e40914;">
                                                @x.tbl_category.Name
                                            </div>
                                        </div>
                                    </div>
                                    <h4 class="title">
                                        <a href="@Url.Action("PostDetail","Posts",new { id=x.PostId })">
                                            @x.Title
                                        </a>
                                    </h4>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>